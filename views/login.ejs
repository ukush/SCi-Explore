<!--We can access objects sent from the server by using the following syntax-->
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="../stylesheets/css/login-style.css">
</head>

<body>
    <main class="form-signin">
        <form method="POST" action="/login">

            <img src="../images/sci-logo.png" alt=""><br><br>

            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>
            <input type="text" id="password" name="password" class="form-control" placeholder="Password" required>
            <input type="text" id="client_id" name="client_id" class="form-control" placeholder="Client ID" required>
            <input type="text" id="client_secret" name="client_secret" class="form-control" placeholder="Client Secret" required>

            <br>
            <div class="checkbox mb-3">
                <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

            <p class="mt-3">Don't have an account? Register <a href="register.html">here</a></p>

        </form>
    </main>
</body>

</html>